<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= post.titulo %> | Blog Personal</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet" />

  <!-- CSS global -->
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <!-- ========= CABECERA ========= -->
  <header>
    <h1><%= post.titulo %></h1>

    <nav>
      <a href="/posts">Publicaciones</a>
      <a href="/">Inicio</a>

      <% if (user) { %>
        <span>Hola, <strong><%= user.username %></strong></span> |
        <a href="/logout">Cerrar sesi√≥n</a>
      <% } else { %>
        <a href="/login">Iniciar sesi√≥n</a> |
        <a href="/register">Registrarse</a>
      <% } %>
    </nav>

    <p class="post-meta">
      Publicado por <strong><%= post.autor_nombre %></strong> el <%= new Date(post.fecha).toLocaleString() %>
    </p>
  </header>

  <!-- ========= CUERPO PRINCIPAL ========= -->
  <main>
    <article class="post-detalle">
      <div class="contenido">
        <%= post.contenido %>
      </div>

      <!-- Botones editar / eliminar (solo autor) -->
      <% if (user && user.id === post.autor_id) { %>
        <div class="acciones">
          <a href="/posts/<%= post.id %>/editar" class="btn-editar">‚úèÔ∏è Editar</a>

          <form action="/posts/<%= post.id %>/eliminar"
                method="POST"
                onsubmit="return confirm('¬øSeguro que deseas eliminar esta publicaci√≥n?');"
                class="form-eliminar">
            <button type="submit" class="btn-eliminar">üóëÔ∏è Eliminar</button>
          </form>
        </div>
      <% } %>
    </article>

    <!-- Secci√≥n de comentarios -->
    <section class="seccion-comentarios">
      <h3>Comentarios (<%= comments.length %>)</h3>

      <!-- Lista de comentarios -->
      <% comments.forEach(c => { %>
        <div class="comentario">
          <div class="comentario-header">
            <span class="autor"><%= c.autor_nombre %></span>
            <span class="fecha"><%= new Date(c.fecha).toLocaleString() %></span>
          </div>
          <p class="contenido-comentario"><%= c.contenido %></p>
        </div>
      <% }) %>

      <!-- Formulario para agregar comentario -->
      <% if (user) { %>
        <form action="/posts/<%= post.id %>/comentarios"
              method="POST"
              class="formulario-comentario">
          <textarea name="contenido"
                    placeholder="Escribe tu comentario‚Ä¶"
                    required
                    rows="4"></textarea>
          <button type="submit">Comentar</button>
        </form>
      <% } else { %>
        <p><a href="/login">Inicia sesi√≥n</a> para comentar.</p>
      <% } %>
    </section>
  </main>

  <!-- ========= PIE DE P√ÅGINA ========= -->
  <footer>
    <p>&copy; 2025 Blog Personal ‚Äî Todos los derechos reservados</p>
  </footer>
</body>
</html>
